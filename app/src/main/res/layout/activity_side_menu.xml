<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F0F0"
    tools:context=".view.setting.SideMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_SideMenu_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_arrow_back_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:background="#F4F0F0"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F0F0"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_setting_Notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="알림 설정"
                android:textSize="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#F4F0F0"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E0D9D9" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F0F0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_setting_Device_Connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="기기 연결"
                android:textSize="25dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E0D9D9" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F0F0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_App_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="어플 소개"
                android:textSize="25dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E0D9D9" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F0F0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="어플 사용 설명"
                android:textSize="25dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E0D9D9" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>